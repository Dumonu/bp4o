#!/usr/bin/env python
# -*- coding: utf-8 -*-

import re
import sys
import subprocess

class colors:
    OFF     = '\033[0;0m'
    BOLD    = '\033[0;1m'
    BLACK   = '\033[0;30m'
    RED     = '\033[0;31m'
    GREEN   = '\033[0;32m'
    YELLOW  = '\033[0;33m'
    BLUE    = '\033[0;34m'
    MAGENTA = '\033[0;35m'
    CYAN    = '\033[0;36m'
    WHITE   = '\033[0;37m'

def colorsoff():
    colors.OFF     = ''
    colors.BOLD    = ''
    colors.BLACK   = ''
    colors.RED     = ''
    colors.GREEN   = ''
    colors.YELLOW  = ''
    colors.BLUE    = ''
    colors.MAGENTA = ''
    colors.CYAN    = ''
    colors.WHITE   = ''

child = subprocess.Popen(sys.argv[1:], stdout=subprocess.PIPE)
(out, err) = child.communicate()
if child.returncode != 0:
    sys.exit(child.returncode)

# Turn off colors if stdout is being piped or redirected
if not sys.stdout.isatty():
    colorsoff()

files = []
for line in out.split('\n'):
    m = re.match('(.+) - (currently )?opened for edit', line)
    if m:
        files.append(m.group(1))

print '\nOpened for edit'
for file in files:
    print '\t{}{}{}'.format(colors.YELLOW, file, colors.OFF)
print ''

sys.exit(child.returncode)
